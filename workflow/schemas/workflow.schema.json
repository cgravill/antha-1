{
    "$id": "https://antha.com/workflows-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "JSON Schema for describing workflows",
    "type": "object",
    "required": [
        "SchemaVersion"
    ],
    "properties": {
        "JobId": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9_ -]*$"
        },
        "SchemaVersion": {
            "$comment": "TODO: Do we need this? Seems redundant to have $schema and SchemaVersion both defined.",
            "type": "string",
            "enum": ["2.0"]
        },
        "Repositories": {
            "type": "object",
            "minProperties": 1,
            "propertyNames": {
                "pattern": "^(repos.antha.com|github.com)/"
            },
            "patternProperties": {
                ".*": {
                    "$comment": "For any key (anything matching the regex .*), the value should be a repository",
                    "$ref": "#/definitions/repository"
                }
            }
        }
    },
    "definitions": {
        "repository": {
            "type": "object",
            "properties": {
                "Directory": {
                    "type": "string"
                },
                "Branch": {
                    "type": "string"
                }
            },
            "required": ["Directory", "Branch"]
        }
    }
}